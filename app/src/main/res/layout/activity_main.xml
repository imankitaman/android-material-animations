<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/txt_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Ripple"
        android:onClick="openRippleAnimation"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:background="?attr/selectableItemBackground"
        android:transitionName="@string/transition_track_title"/>

       <TextView
        android:id="@+id/txt_rv_shared_transition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="openRecyclerAdapter"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Shared Transition with Recycler View Adapter"
        android:background="?attr/selectableItemBackground"
        android:transitionName="@string/transition_track_title"/>

    <TextView
        android:id="@+id/txt_shared_circular_reveal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="openCircularReveal"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Circular Reveal"
        android:background="?attr/selectableItemBackground"
        android:transitionName="@string/transition_track_title"/>

    <TextView
        android:id="@+id/txt_transition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="openTransition"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Transition"
        android:background="?attr/selectableItemBackground"
        android:transitionName="@string/transition_track_title"/>



</LinearLayout>
